<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>나의 게시글</title>
    <link rel="stylesheet" href="/stylesheets/post.css">
</head>

<body>
    <div class="container">
        <!-- 타이틀 바 -->
        <div class="title-bar">
            <h1>게시글 관리</h1>
            <div class="actions">
                <a href="/posts/new" class="create-button">글쓰기</a>
                <form action="/posts" method="POST" style="display:inline;">
                    <button type="submit" class="delete-button">삭제</button>
                </form>
            </div>
        </div>

        <!-- 게시글 테이블 -->
        <form action="/posts" method="POST">
            <table>
                <thead>
                    <tr>
                        <th>게시글 ID</th>
                        <th>제목</th>
                        <th>작성일</th>
                        <th>조회수</th>
                        <th>삭제</th>
                    </tr>
                </thead>
                <tbody>
                    <% posts.forEach(post => { %>
                        <tr>
                            <td><%= post.board_id %></td>
                            <td><%= post.title %></td>
                            <td><%= post.created_at %></td>
                            <td><%= post.view_count %></td>
                            <td><input type="checkbox" name="postIds" value="<%= post.id %>"></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </form>
    </div>
</body>

</html>
